@model NeroMerch.Models.Order.NewVm

@{
    ViewBag.Title = "New";
}

<h2>Bestellung aufgeben</h2>

<div class="row">
    <div class="col-lg-6">
        @foreach (var p in Model.Products)
        {
            <p>
                @p.Amount x @p.ManufacturerName @p.ProductName
            </p>
        }
            <h3>€ @Model.TotalPrice.ToString("0.00")</h3>
    </div>

    <div class="col-lg-6">
        <form method="post" action="/Order/Place">
            <p>Anrede: <input value="@Model.Title" name="@nameof(Model.Title)" /></p>
            <p>Vorname: <input value="@Model.FirstName" name="@nameof(Model.FirstName)" /></p>
            <p>Nachname: <input value="@Model.LastName" name="@nameof(Model.LastName)" /></p>
            <p>Straße: <input value="@Model.Street" name="@nameof(Model.Street)" /></p>
            <p>PLZ: <input value="@Model.Zip" name="@nameof(Model.Zip)" /></p>
            <p>Ort: <input value="@Model.City" name="@nameof(Model.City)" /></p>
            <br />
            Zahlungsmethode wählen:
            <br />
            <select name="@nameof(Model.PaymentMethod)">
                <option value="0">Kreditkarte</option>
                <option value="1">Überweisung</option>
                <option value="2">Paysafecard</option>
            </select>
            <button>bestellen!</button>
        </form>
    </div>

</div>